@{
    ViewData["Title"] = "Usuarios";
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@model GetUsersViewModel

<div class="jumbotron">
    <div class="container">
        <h1 class="display-6 mb-3 text-center">Lista de Usuarios</h1>
    </div>
</div>
<table class="table table-striped table-dark text-center">
    <thead>
        <tr>
            <th scope="col">Usuario</th>
            <th scope="col">Rol</th>
            <th scope="col">Opcion</th>
        </tr>
    </thead>
    <tbody>
        @foreach(User user in Model.Users) {
            <tr>
                <td>@user.Username</td>
                <td>@Enum.GetName(user.Role)</td>
                <td>
                    <button class="btn btn-success">
                        <a asp-controller="User" asp-action="Update" asp-route-id="@user.Id" class="badge badge-primary">Actualizar</a>
                    </button>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Desea borrar el usuario?')" class="btn btn-danger">
                        <span class="badge badge-primary">Borrar</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-outline-dark">
    <a asp-controller="User" asp-action="Add" class="text-reset text-decoration-none">Crear usuario</a>
</button>
