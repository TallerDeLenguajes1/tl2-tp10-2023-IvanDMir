@{ 
    ViewData["Title"] = "Crear Usuario";
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@model AddUserViewModel

<div class="container">
    <div class="row col-md-6 mx-auto" style="margin-top: -150px;">
        <h1>@ViewData["Title"]</h1>
        <form asp-controller="User" asp-action="Add">
            <div class="form-group">
                <label for="username">Nombre de usuario</label>
                <input asp-for = "@Model.Username" class="form-control" id="username">
            </div>
            @if(!string.IsNullOrEmpty(Model.ErrorMessage)) {
                <p class="text-danger text-center">@Model.ErrorMessage</p>
            }
            <div class="form-group">
                <label for="pass">Clave del usuario</label>
                <input asp-for = "@Model.Password" class="form-control" id="pass">
            </div>
            <div class="form-group">
                <label for="username">Rol del usuario</label>
                <div class="form-check">
                    <input type="radio" asp-for = "@Model.Role" value="@((int)Role.Admin)" class="form-check-input">
                    <label asp-for="@Model.Role" class="form-check-label">Admin</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for = "@Model.Role" value="@((int)Role.Op)" class="form-check-input">
                    <label asp-for="@Model.Role" class="form-check-label">Op</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mx-auto mt-3">Crear</button>
        </form>
    </div>
</div>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}