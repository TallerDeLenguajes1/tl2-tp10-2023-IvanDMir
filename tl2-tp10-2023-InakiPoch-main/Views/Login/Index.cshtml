@{
    ViewData["Title"] = "Inicio de Sesion";
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@model LoginViewModel

<div class="container">
    <div class="row col-md-6 mx-auto" style="margin-top: -150px;">
        <h1>@ViewData["Title"]</h1>
        <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Nombre de usuario</label>
                <input asp-for = "@Model.Username" class="form-control" id="username">
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="pass">Clave</label>
                <input asp-for="@Model.Password" type="password" class="form-control" id="pass">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            @if(!string.IsNullOrEmpty(Model.ErrorMessage)) {
                <p class="text-danger text-center mt-3">@Model.ErrorMessage</p>
            }
            <button type="submit" class="btn btn-primary mx-auto mt-3">Ingresar</button>
        </form>
    </div>
</div>
