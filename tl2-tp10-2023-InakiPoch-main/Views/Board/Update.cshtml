@{ 
    ViewData["Title"] = "Actualizar Tablero";
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@model UpdateBoardViewModel

<div class="container">
    <div class="row col-md-6 mx-auto" style="margin-top: -150px;">
        <h1>@ViewData["Title"]</h1>
        <form asp-controller="Board" asp-action="Update">
            <input hidden asp-for = "@Model.Id">
            <div class="form-group">
                <label for="username">Nuevo nombre del tablero</label>
                <input asp-for = "@Model.Name" class="form-control" id="username">
            </div>
            @if(!string.IsNullOrEmpty(Model.ErrorMessage)) {
                <p class="text-danger text-center">@Model.ErrorMessage</p>
            }
            <div class="form-group">
                <label for="username">Nueva descripcion</label>
                <input asp-for = "@Model.Description" class="form-control" id="username">
            </div>
            <button type="submit" class="btn btn-primary mx-auto mt-3">Actualizar</button>
        </form>
    </div>
</div>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}