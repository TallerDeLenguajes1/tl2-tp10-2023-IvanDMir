@{ 
    ViewData["Title"] = "Actulizar Usuario";
}

@model Usuario

<h1>@ViewData["Title"]</h1>
<form asp-controller="Usuario" asp-action="Update">
    <div class="form-group">
        <label for="nuevaId">Nueva ID de usuario</label>
        <input type="text" asp-for="@Model.id_usuario" class="form-control" id="nuevaId">  
    </div>
    <div class="form-group">
        <label for="usuario">Nuevo nombre de usuario</label>
        <input asp-for = "@Model.nombre_De_Usuario" class="form-control" id="usuario">  
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>