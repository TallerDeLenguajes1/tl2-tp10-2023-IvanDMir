
@model tl2_tp10_2023_IvanDMir.ViewModels.LoginVM

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="text-center">
    <h1 class="display-4">Iniciar Sesión</h1>
    <form asp-controller="Login" asp-action="Login" method="post" class="w-50 m-auto">
        <fieldset>
            <div class="mb-3">
                <label asp-for="@Model.Nombre" class="form-label">Usuario</label>
                <input asp-for="@Model.Nombre" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Usuario">
                 <span asp-validation-for="@Model.Nombre" class="text-danger"></span>    
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Contrasena" class="form-label">Contraseña</label>
                <input asp-for="@Model.Contrasena" type="password" class="form-control" id="exampleFormControlInput1" placeholder="Contraseña">
                <span asp-validation-for="@Model.Contrasena" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Iniciar Sesión</button>
        </fieldset>
    </form>
</div>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}