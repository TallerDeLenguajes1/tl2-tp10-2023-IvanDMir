@{ 
    ViewData["Title"] = "Actualizar Tablero";
}

@using tl2_tp10_2023_IvanDMir.ViewModels;
@model UBViewModel

<div class="container">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <form asp-controller="Tablero" asp-action="Update">
        <input hidden asp-for="@Model.Id">
        <input hidden asp-for="@Model.IdUsuarioPropietario">
        <div class="mb-3">
            <label for="nuevoNombre" class="form-label">Nuevo nombre del tablero</label>
            <input asp-for="@Model.Nombre" class="form-control" id="nuevoNombre">
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Desc" class="form-label">Nueva descripci√≥n</label>
            <input asp-for="@Model.Descripcion" class="form-control" id="Desc">
        </div>
        <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>
</div>
