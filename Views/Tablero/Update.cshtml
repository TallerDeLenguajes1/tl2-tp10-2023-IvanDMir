@{ 
    ViewData["Title"] = "Actulizar Tablero";
}

@model Tablero

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="Update">
        <input hidden asp-for="@Model.IdTablero">
    <div class="form-group">
        <label for="nuevoNombre">Nuevo nombre del Tablero</label>
        <input asp-for="@Model.Nombre" class="form-control" id="nuevoNombre">  
    </div>
    <div class="form-group">
        <label for="Desc">Nueva Descripcion</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="Desc">  
    </div>
    <div class="form-group">
        <label for="Dueño">Nuevo Dueño </label>
        <input asp-for = "@Model.IdUsuarioPropietario" class="form-control" id="Dueño">  
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>