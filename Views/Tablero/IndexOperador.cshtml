@{
    ViewData["Title"] = "Tableros";
}

@using tl2_tp10_2023_IvanDMir.ViewModels;
@using tl2_tp10_2023_IvanDMir.repositorios;
@model GBViewModel;

<table class="table table-striped table-dark text-center" style="background-color: #343a40;">
    <thead>
        <tr>
            <th colspan="3">LISTA DE TABLEROS</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.TablerosAsignados.Any()) {
            <th colspan="3" class="text-center">TABLEROS PROPIOS</th>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">nombre del Propietario</th>
            </tr>
            @foreach(Tablero tablero in Model.TablerosAsignados) {
                <tr>
                    <td>@tablero.Nombre</td>
                    <td>@tablero.Descripcion</td>
                    <td>@tablero.NombreUsuarioPropietario</td>
                </tr>
            }
        }
        @if(Model.TablerosConTareas.Any()) {
            <th colspan="3" class="text-center">TABLEROS DE TAREAS ASIGNADOS</th>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">nombre del Propietario</th>
            </tr>
            @foreach(Tablero tablero in Model.TablerosConTareas) {
                <tr>
                    <td>@tablero.Nombre</td>
                    <td>@tablero.Descripcion</td>
                    <td>@tablero.NombreUsuarioPropietario</td>
                </tr>
            }
        }
    </tbody>
</table>
