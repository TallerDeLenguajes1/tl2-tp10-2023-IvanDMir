@{ 
    ViewData["Title"] = "Añadir Tablero";
}

@using tl2_tp10_2023_IvanDMir.ViewModels;
@model ABViewModel

<div class="container">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <form asp-controller="Tablero" asp-action="Add">
        <div class="mb-3">
            <label for="nombreDeTablero" class="form-label">Nombre de Tablero</label>
            <input asp-for="@Model.Nombre" class="form-control" id="nombreDeTablero" required>
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>   
        </div>
        <div class="mb-3">
            <label for="DescTablero" class="form-label">Descripción de Tablero</label>
            <input asp-for="@Model.Descripcion" class="form-control" id="DescTablero" required>
            <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>   
        </div>
        <input hidden asp-for="@Model.IdUsuarioPropietario" class="form-control" id="IdDueño">
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
