@{ 
    ViewData["Title"] = "Añadir Tablero";
}

@using tl2_tp10_2023_IvanDMir.ViewModels;
@model ABViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="Add">
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre de Tablero</label>
        <input asp-for = "@Model.Nombre" class="form-control" id="nombreDeTablero" required>
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>   
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion de Tablero</label>
        <input asp-for = "@Model.Descripcion" class="form-control" id="DescTablero" required>
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>   
    </div>
      <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario">Ig del Dueño</label>
        <input asp-for = "@Model.IdUsuarioPropietario" class="form-control" id="IdDueño">
        <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>   
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>