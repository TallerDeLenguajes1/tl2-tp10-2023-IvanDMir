@{
    ViewData["Title"] = "ListaTareas";
}

@using tl2_tp10_2023_IvanDMir.ViewModels;
@using tl2_tp10_2023_IvanDMir.repositorios;
@model GTViewModel;

<table class="table table-bordered table-dark text-center" style="background-color: #343a40;">
    <thead>
        <tr>
            <th colspan="8">LISTA DE TAREAS</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.TareasPropias.Any()) {
            <th colspan="8" class="text-center">TAREAS PROPIAS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Color</th>
                <th scope="col">Estado</th>
                <th scope="col">Tablero al que pertenece</th>
                <th scope="col">usuario asignado</th>
                <th scope="col">opcion</th>
            </tr>
            @foreach(Tarea tareas in Model.TareasPropias) {
                <tr>
                    <td>@tareas.Id</td>
                    <td>@tareas.Nombre</td>
                    <td>@tareas.Descripcion</td>
                    <td onmouseover="this.style.backgroundColor = ObtenerColorFondo('@tareas.Color')">@tareas.Color</td>
                    <td>@Enum.GetName(tareas.Estado)</td>
                    <td>@tareas.NombreTablero</td>
                     @if (tareas.IdUsuarioAsignado == 0 || string.IsNullOrEmpty(tareas.nombreAsignado) ) {
                        <td> 
                            <p> Sin Asignar</p>
                        </td>
                    }else {
                        <td>@tareas.nombreAsignado</td>
                    }
                    <td> 
                        <button class="btn btn-primary">
                            <a asp-controller="Tarea" asp-action="Asignar" asp-route-TareaId="@tareas.Id" class="badge badge-primary" style="background-color: #007bff;">Asignar</a>
                        </button>
                        <button class="btn btn-success">
                            <a asp-controller="Tarea" asp-action="Update" asp-route-id="@tareas.Id" class="badge badge-primary" style="background-color: #28a745;">Actualizar</a>
                        </button>
                    </td>
                </tr>
            }
        }
        @if(Model.TareasAsignadas.Any()) {
            <th colspan="8" class="text-center">TAREAS ASIGNADAS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Color</th>
                <th scope="col">Estado</th>
                <th scope="col">Tablero al que pertenece</th>
                <th scope="col">usuario asignado</th>
                <th scope="col">opcion</th>
            </tr>
            @foreach(Tarea tareas in Model.TareasAsignadas) {
                <tr>
                    <td>@tareas.Id</td>
                    <td>@tareas.Nombre</td>
                    <td>@tareas.Descripcion</td>
                    <td onmouseover="this.style.backgroundColor = ObtenerColorFondo('@tareas.Color')">@tareas.Color</td>
                    <td>@Enum.GetName(tareas.Estado)</td>
                    <td>@tareas.NombreTablero</td>
                     @if (tareas.IdUsuarioAsignado == 0 || string.IsNullOrEmpty(tareas.nombreAsignado) ) {
                        <td> 
                            <p> Sin Asignar</p>
                        </td>
                    }else {
                        <td>@tareas.nombreAsignado</td>
                    }
                    <td>
                        <button class="btn btn-success">
                            <a asp-controller="Tarea" asp-action="Update" asp-route-id="@tareas.Id" class="badge badge-primary" style="background-color: #28a745;">Actualizar</a>
                        </button></td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    function confirmarBorrado(tareaId) {
        if (confirm("¿Estás seguro de que deseas borrar esta tarea?")) {
            window.location.href = '/Tarea/Delete?id=' + tareaId;
        }
    }

 function ObtenerColorFondo(color) {
        switch(color) {
            case 'Principal':
                return '#dc3545';
            case 'Necesaria':
                return '#ffc107';
            case 'Opcional':
                return '#17a2b8';
            case 'Doble recompensa':
                return '#28a745';
            default:
                return ''; 
        }
    }
</script>
