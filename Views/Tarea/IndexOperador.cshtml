@{
    ViewData["Title"] = "ListaTareas";
}

@using tl2_tp10_2023_IvanDMir.ViewModels;
@using tl2_tp10_2023_IvanDMir.repositorios;
@model GTViewModel;

<table class="table table-striped table-dark text-center" style="background-color: #343a40;">
    <thead>
        <tr>
            <th colspan="6">LISTA DE TAREAS</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.TareasPropias.Any()) {
            <th colspan="6" class="text-center">TAREAS PROPIAS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Color</th>
                <th scope="col">Estado</th>
                <th scope="col">Tablero al que pertenece</th>
            </tr>
            @foreach(Tarea tareas in Model.TareasPropias) {
                <tr>
                    <td>@tareas.Id</td>
                    <td>@tareas.Nombre</td>
                    <td>@tareas.Descripcion</td>
                    <td>@tareas.Color</td>
                    <td>@Enum.GetName(tareas.Estado)</td>
                    <td>@tareas.IdTablero</td>
                </tr>
            }
        }
        @if(Model.TareasAsignadas.Any()) {
            <th colspan="6" class="text-center">TAREAS ASIGNADAS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Color</th>
                <th scope="col">Estado</th>
                <th scope="col">Tablero al que pertenece</th>
            </tr>
            @foreach(Tarea tareas in Model.TareasAsignadas) {
                <tr>
                    <td>@tareas.Id</td>
                    <td>@tareas.Nombre</td>
                    <td>@tareas.Descripcion</td>
                    <td>@tareas.Color</td>
                    <td>@Enum.GetName(tareas.Estado)</td>
                    <td>@tareas.IdTablero</td>
                </tr>
            }
        }
    </tbody>
</table>
